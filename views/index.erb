<?xml version="1.0" encoding="utf-8"?>
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <title>Tinderbox results index</title>
  </head>
  <body>
    <table>
      <tr>
	<th>filename</th>
	<th>package</th>
	<th>matches</th>
      </tr>

      <% items.each do |item| %>
        <tr>
	  <td><%= item[:host] %></td>
	  <td><a href="<%= item[:public_url] %>"><%= item[:pkg] %></a></td>
	  <td><%= item[:date] %></td>
	  <td><%= item[:pkg] %></td>
	  <td><%= item[:matches] %></td>
	</tr>
      <% end %>
    </table>
  </body>
</html>
